	<div class="input-group">
	  {{input value=query class="form-control"
	  enter='searchPackage'}}
	  <span class="input-group-btn">
	    <button class="btn btn-default" type="button" {{action 'searchPackage' query}}>Sök</button>
	  </span>
  </div>

<table class="table">
	<thead>
		<tr>
			<th>Namn</th>
			<th>Titel</th>
			<th>År</th>
			<th>Författare</th>
      <th></th>
		</tr>
	</thead>
	<tbody>
		{{#each model as |package|}}
			<tr>
				<td>{{#link-to 'package.show' package.name}}{{package.name}}{{/link-to}}</td>
				<td>{{package.title}}</td>
				<td>{{package.year}}</td>
				<td>{{package.author}}</td>
        <td>
          {{#if package.copyrighted}}
            <div class="label label-danger btn-xs">Upphovsrättsskyddat</div>
          {{else}}
            <div class="label label-success btn-xs">Fritt material</div>
          {{/if}}
        </td>
			</tr>
		{{/each}}
	</tbody>
</table>
